<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/donor_picture_custom_row"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/account" />

    <ImageButton
        android:id="@+id/call_button_custom_row"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/my_call_icon"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="34dp"
        android:id="@+id/tableLayout"
        android:layout_alignTop="@+id/donor_picture_custom_row"
        android:layout_toEndOf="@+id/donor_picture_custom_row">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/name_custom_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/location_custom_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/contact_number_custom_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</RelativeLayout>