<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.reddrop.reddrop.LoginActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Red Drop"
        android:textColor="@color/colorAccent"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usernameLogin"
        android:layout_below="@+id/usernameLogin"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordLogin"
        android:layout_alignStart="@+id/passwordLogin"
        android:layout_below="@+id/passwordLogin"
        android:layout_marginTop="102dp"
        android:background="@drawable/mybutton"
        android:text="Log In"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have An Account?"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/signUpTextView"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sign Up"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignEnd="@+id/buttonLogin"
        android:layout_marginEnd="77dp" />
</RelativeLayout>
